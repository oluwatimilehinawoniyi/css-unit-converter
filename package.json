{
  "name": "css-unit-converter",
  "displayName": "CSS Unit Converter",
  "description": "A VS Code extension that converts CSS unit values and displays them in hover cards.",
  "version": "0.0.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/oluwatimilehinawoniyi/css-unit-converter.git"
  },
  "publisher": "OluwatimilehinAwoniyi",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "css",
        "extensions": [
          ".css"
        ]
      },
      {
        "id": "scss",
        "extensions": [
          ".scss"
        ]
      },
      {
        "id": "less",
        "extensions": [
          ".less"
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "CSS Unit Converter",
      "properties": {
        "cssUnitConverter.showAsComment": {
          "type": "boolean",
          "default": false,
          "description": "Show unit conversions as comments beside the code."
        }
      }
    }
  },
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:scss",
    "onLanguage:less"
  ],
  "scripts": {
    "build": "esbuild src/extension.ts --bundle --outdir=dist --external:vscode",
    "watch": "esbuild src/extension.ts --bundle --outdir=dist --external:vscode --watch",
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.91.0",
    "vscode": "^1.91.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "esbuild": "^0.21.5",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
